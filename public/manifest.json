{
  "manifest_version": 3,
  "name": "Smart Notes",
  "version": "1.0.0",
  "description": "A smart note-taking extension with Markdown support and AI-powered draft transformation",
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
